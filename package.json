{
  "name": "vync",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run dev",
    "build": "bun run build",
    "lint": "eslint 'packages/**/*.ts' --ext .ts",
    "lint:fix": "eslint 'packages/**/*.ts' --ext .ts --fix",
    "format": "prettier --write 'packages/**/*.ts'",
    "format:check": "prettier --check 'packages/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "bun": "^1.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "prettier": "^3.0.0"
  }
}